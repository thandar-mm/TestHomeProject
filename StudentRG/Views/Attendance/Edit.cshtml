@model AttendanceViewModel
<h1 class="text-center"> Attendance Edit</h1>
    <div>
        <form action="/Attendance/update" method="post">

            @* <div class="mb-3">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="StudentId" class="form-label">StudentID</label>
                <input type="text" name="StudentId" class="form-control" value="@Model.StudentId" required>
