@model PrerequisiteCourseViewModel
<!DOCTYPE html>
<html>
<head>
    <h1 class="text-center">PrerequisiteCourse Edit</h1>
</head>
<body>
    <div>
        <form action="/PrerequisiteCourse/Edit" method="post">
            <div class="mb-3">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="PrerequisiteCourseId" class="form-label">PrerequisiteCourseId</label>
                <select class="form-select" name="PrerequisiteCourseId">
                    <option value="x" selected>--Select PrerequisiteCourse--</option>
                    @foreach (var precourse in ViewBag.PrerequisiteCourse)
                    {
                        if (@precourse.Id == Model.PrerequisiteCourseId)
                        {
                            <option value="@precourse.Id" selected>@precourse.Name</option>
                        }
                        else
                        {
                            <option value="@precourse.Id">@precourse.Name</option>
                        }
                    }

                </select>
            </div>
            <div class="mb-3">
                <label for="CourseId" class="form-label">CourseID</label>
                <select class="form-select" name="CourseId">
                    <option value="x" selected>--Select Course--</option>
                    @foreach (var course in ViewBag.Courses)
                    {
                        if (@course.Id == Model.CourseId)
                        {
                            <option value="@course.Id" selected>@course.Name</option>
                        }
                        else
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    }

                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Update</button>
                <!--<button class="btn btn-primary" href="/Course/List">Cancel</button>-->
                <a href="/PrerequisiteCourse/List" class="btn btn-primary" role="button">Cancel</a>
            </div>
        </form>

    </div>
</body>
</html>